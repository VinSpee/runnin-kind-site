<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
		<meta name="viewport" content="width=device-width">
		<title><%= current_page.data.title || "The Middleman" %></title>
		<meta name="description" content="Metro Detroit's most fun outlaw country band">
		<%= stylesheet_link_tag "main" %>
		<link rel="icon" href="images/favicon.png">
	</head>
	
	<body class="<%= page_classes %>">
		<header role="banner">
			<%= partial "navigation" %>
			<div class="branding">
				<%= partial "logo" %>
			</div>
			<div class="call-to-action">
				<div class="call-to-action__call">
					<span class="call-to-action__text">Request a Performance</span>
				</div>
				<div class="call-to-action__action">
					<a class="call-to-action__button" tel="+13137721244" href="booking.html">(313)772-1244</a>
				</div>
			</div>
		</header>

		<main role="main">
			<%= yield %>
		</main>
		<footer role="contentinfo">
		</footer>
		<script src="//use.typekit.net/msp6jkb.js"></script>
		<script>try{Typekit.load();}catch(e){}</script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/responsive-nav.js/1.0.32/responsive-nav.min.js"></script>
		<script>
			(function(){
				var nav = responsiveNav("[role=navigation]");
			})();
		</script>
		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-35786009-2', 'therunninkind.com');
			ga('send', 'pageview');
			ga('require', 'displayfeatures');
			ga('require', 'linkid', 'linkid.js');
		</script>
	</body>
</html>
